<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >


    <TextView
        android:background="#FFFFFF"
        android:id="@+id/idDat"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="10-01-2017"
        android:textSize="18sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/idB"
        android:layout_marginTop="10dp"
        android:background="#1a1aff"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/idDat"/>

    <TextView

        android:background="#FFFFFF"
        android:id="@+id/idEventNam"
        android:layout_toRightOf="@+id/idB"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Tour to Cox,s Bazar"
        android:textSize="20sp"
        android:gravity="center|bottom"
        />
    <TextView
       android:id="@+id/idSE"
        android:background="#FFFFFF"
        android:layout_toRightOf="@+id/idB"
        android:layout_below="@+id/idEventNam"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Jan 10-Jan15"
        android:textSize="18sp"
        android:gravity="center|top"
        />


</RelativeLayout>