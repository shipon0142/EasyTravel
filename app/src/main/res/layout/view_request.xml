<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipon Sarder"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/lAccept"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lname"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:backgroundTint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Accept"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/lIgnore"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lname"
        android:layout_toRightOf="@+id/lAccept"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:backgroundTint="@color/cast_intro_overlay_button_background_color"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Ignore"
        android:textAllCaps="false"/>


</RelativeLayout>